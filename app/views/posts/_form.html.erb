<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control input-lg", :data => {:provide => "markdown"}, placeholder: "Ingresa el body del articulo" %>
  </div>
  <div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit @post.new_record? ? 'Nuevo' : 'Editar', class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
