<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-sm-offset-3">
      <h1>New Post</h1>

      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for :post, url: posts_path do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control input-lg", placeholder: "Ingresa el body del articulo" %>
        </div>
        <div>
          <%= f.submit 'Enviar', class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
