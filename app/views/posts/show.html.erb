<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1 class="title">
        <%= @post.title %>
      </h1>
      <% if user_signed_in? %>
        <%= link_to " <span class='glyphicon glyphicon-pencil'>Editar</span>  ".html_safe, edit_post_path(@post) %>
        <%= link_to " <span class='glyphicon glyphicon-trash'>Eliminar</span> ".html_safe,  @post,  method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %>
      <% end %> <br><br>
      <div class="date">
        Publicado por <%= current_user.email %> hace <%= time_ago_in_words(@post.created_at) %>
        <br><br>
      </div>
      <div class="date">
        <%= @post.body %>
      </div>
      <div>
        <p><%= @post.comments.count %></p>
        <%= render @post.comments %>

        <h2>Añador comentario</h2>
        <%= render "comments/form" %>
      </div>

    </div>
  </div>
</div>
