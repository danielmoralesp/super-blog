<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1 class="title">
        <%= @post.title %>
      </h1>
      <div class="date">
        Submitted <%= time_ago_in_words(@post.created_at) %> Ago
        <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_post_path(@post) %>
        <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe,  @post,  method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %>
      </div>
      <div class="date">
        <%= @post.body %>
      </div>
      <div>
        <p><%= @post.comments.count %></p>
        <%= render @post.comments %>

        <h2>Añador comentario</h2>
        <%= render "comments/form" %>
      </div>

    </div>
  </div>
</div>
