<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1 class="title">
        <%= @post.title %>
      </h1>
      <% if (user_signed_in? && (current_user.id == @post.user_id)) %>
        <%= link_to " <span class='glyphicon glyphicon-pencil'>Editar</span>  ".html_safe, edit_post_path(@post) %>
        <%= link_to " <span class='glyphicon glyphicon-trash'>Eliminar</span> ".html_safe,  @post,  method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %>
      <% end %> <br><br>
      <div class="date">
        Publicado por " <%= @post.user.email %> " hace <%= time_ago_in_words(@post.created_at) %>
        <!-- current_user.email -->
        <br><br>
      </div>
      <div class="date" data-provide="markdown-show">
        <%= @post.body %>
      </div>
      <br><br>
      <div>
        <h5>Numero de Comentarios (<%= @post.comments.count %>)</h5>
        <%= render @post.comments %>
        <%= render "comments/form" %>
      </div>
    </div>
  </div>
</div>
