<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa tu nombre" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control input-lg", placeholder: "Ingresa el body del comentario" %>
  </div>
  <div>
    <%= f.submit 'Comentar', class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
